rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Posts - users can upload to their own directory
    match /posts/{userId}/{allPaths=**} {
      allow read: if true; // Anyone can view posts
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Messages - users can upload to their own directory
    match /messages/{userId}/{allPaths=**} {
      allow read: if request.auth != null; // Any authenticated user can read messages they have access to
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024; // 5MB limit
    }
  }
}
